@model IEnumerable<Yapaydeneme.Models.Siparis>
@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col">
        <div class="card shadow">
            <div class="card-header py-3">
                <h5 class="card-title mb-0">Siparişlerim</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped mb-0">
                        <thead class="table-secondary">
                            <tr>
                                <th>Sipariş No</th>
                                <th>Sipariş Tarihi</th>
                                <th>Toplam Tutar</th>
                                <th>Durum</th>
                                <th style="width: 100px;">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var siparis in Model)
                            {
                                <tr>
                                    <td>@siparis.SiparisNo</td>
                                    <td>@siparis.SiparisTarihi.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@siparis.ToplamTutar.ToString("C")</td>
                                    <td>
                                        <span class="badge bg-@(siparis.SiparisDurumu == "Tamamlandı" ? "success" :
                                                             siparis.SiparisDurumu == "İşleniyor" ? "warning" :
                                                             siparis.SiparisDurumu == "İptal" ? "danger" : "info")">
                                            @siparis.SiparisDurumu
                                        </span>
                                    </td>
                                    <td>
                                        <a asp-action="Detay" asp-route-id="@siparis.Id"
                                           class="btn btn-info btn-sm">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="5" class="text-center">Henüz siparişiniz bulunmamaktadır.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>