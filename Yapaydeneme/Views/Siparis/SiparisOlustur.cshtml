@model Yapaydeneme.Models.Siparis
@{
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-header py-3">
                <h5 class="card-title mb-0">Sipariş Bilgileri</h5>
            </div>
            <div class="card-body">
                <form asp-action="SiparisOlustur" method="post">
                    <div class="mb-3">
                        <label for="teslimatAdresi" class="form-label">Teslimat Adresi</label>
                        <textarea class="form-control" id="teslimatAdresi" name="teslimatAdresi" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="telefonNo" class="form-label">Telefon Numarası</label>
                        <input type="tel" class="form-control" id="telefonNo" name="telefonNo" required>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-2"></i>Siparişi Tamamla
                        </button>
                        <a asp-controller="Sepet" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Sepete Dön
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card shadow">
            <div class="card-header py-3">
                <h5 class="card-title mb-0">Sepet Özeti</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Ara Toplam:</span>
                    <span>@ViewBag.AraToplam.ToString("C")</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Kargo:</span>
                    <span>@ViewBag.KargoUcreti.ToString("C")</span>
                </div>
                <hr>
                <div class="d-flex justify-content-between">
                    <strong>Toplam:</strong>
                    <strong>@ViewBag.ToplamTutar.ToString("C")</strong>
                </div>
            </div>
        </div>
    </div>
</div>