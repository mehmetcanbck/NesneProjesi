@model Yapaydeneme.Models.Kategori

@{
    ViewData["Title"] = "Kategori Düzenle";
}

<div class="container">
    <h1>Kategori Düzenle</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Duzenle">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="KategoriAdi" class="control-label">Kategori Adı</label>
                    <input asp-for="KategoriAdi" class="form-control" />
                    <span asp-validation-for="KategoriAdi" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Aciklama" class="control-label">Açıklama</label>
                    <textarea asp-for="Aciklama" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a asp-action="KategoriListesi" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <div class="alert alert-info">
                <h4>Bu Kategorideki Ürünler</h4>
                @if (Model.Urunler != null && Model.Urunler.Any())
                {
                    <ul>
                        @foreach (var urun in Model.Urunler)
                        {
                            <li>@urun.UrunAdi</li>
                        }
                    </ul>
                }
                else
                {
                    <p>Bu kategoride henüz ürün bulunmamaktadır.</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 