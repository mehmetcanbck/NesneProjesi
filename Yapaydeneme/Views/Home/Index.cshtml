@model IEnumerable<Yapaydeneme.Models.Urun>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center">
    <h1 class="display-4">Hoş Geldiniz</h1>
    <p>Kaliteli ayakkabıların adresi</p>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <h2>Son Eklenen Ürünler</h2>
    </div>
</div>

<div class="row">
    @foreach (var urun in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(urun.ResimUrl))
                {
                    <img src="@urun.ResimUrl" class="card-img-top" alt="@urun.UrunAdi">
                }
                else
                {
                    <img src="~/images/no-image.jpg" class="card-img-top" alt="Resim Yok">
                }
                <div class="card-body">
                    <h5 class="card-title">@urun.UrunAdi</h5>
                    <p class="card-text">@urun.Aciklama</p>
                    <p class="card-text">
                        <small class="text-muted">Kategori: @urun.Kategori?.KategoriAdi</small>
                    </p>
                    <h6 class="card-subtitle mb-2 text-primary">@urun.Fiyat.ToString("C")</h6>
                    <a asp-controller="Urun" asp-action="Detay" asp-route-id="@urun.Id" class="btn btn-primary">Detaylar</a>
                    @if (urun.StokDurumu)
                    {
                        <form asp-controller="Sepet" asp-action="Ekle" method="post" class="d-inline">
                            <input type="hidden" name="urunId" value="@urun.Id" />
                            <input type="hidden" name="adet" value="1" />
                            <button type="submit" class="btn btn-success">Sepete Ekle</button>
                        </form>
                    }
                    else
                    {
                        <button class="btn btn-secondary" disabled>Stokta Yok</button>
                    }
                </div>
            </div>
        </div>
    }
</div>
